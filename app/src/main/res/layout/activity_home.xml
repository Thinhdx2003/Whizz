<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38ABA4"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/home_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="90dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        app:srcCompat="@drawable/home_island"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/rounded_corner" />

    <Button
        android:id="@+id/home_question1"
        android:layout_width="339dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_userName"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#C9FEFB"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:src="@drawable/whiterectangle"
        android:text="Object-Oriented Programming"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/home_question2"
        android:layout_width="339dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_question1"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#C9FEFB"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:src="@drawable/whiterectangle"
        android:text="Database Fundamental"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/home_question3"
        android:layout_width="339dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_question2"
        android:layout_marginLeft="40dp"
        android:src="@drawable/whiterectangle"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Computer Systems"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:backgroundTint="#C9FEFB"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/home_question4"
        android:layout_width="339dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_question3"
        android:layout_marginLeft="40dp"
        android:src="@drawable/whiterectangle"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Operation Fudamental"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:backgroundTint="#C9FEFB"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/home_question5"
        android:layout_width="339dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_question4"
        android:layout_marginLeft="40dp"
        android:src="@drawable/whiterectangle"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Machine Learning"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:backgroundTint="#C9FEFB"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/home_selected"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint"
            android:animateLayoutChanges="true"/>

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/addbox"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/users"
            android:background="?android:attr/selectableItemBackground"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/settings"
            android:background="?android:attr/selectableItemBackground"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>


</RelativeLayout>

