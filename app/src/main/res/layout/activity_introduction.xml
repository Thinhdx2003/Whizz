<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:background="@drawable/whizz_background"
    android:id="@+id/question_container">


    <Button
        android:id="@+id/Introduction_back"
        android:layout_width="49dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/Introduction_courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Introduction_introduction"
        android:layout_width="371dp"
        android:layout_height="424dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/whiterectangle"
        android:backgroundTint="#C9FEFB"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/numOfQuestion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:hint="Number of Question"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Introduction_startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/black"
        android:text="START"
        android:textAlignment="center"
        android:textColor="#C9FEFB"
        android:textSize="25dp"
        app:cornerRadius="100dp" />
</RelativeLayout>